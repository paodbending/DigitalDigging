<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.digitaldigging.screens.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.digitaldigging.screens.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_artistInfoFragment"
            app:destination="@id/artistInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/artistInfoFragment"
        android:name="com.example.digitaldigging.screens.artistinfo.ArtistInfoFragment"
        android:label="fragment_artist_info"
        tools:layout="@layout/fragment_artist_info" >
        <argument
            android:name="spotifyId"
            app:argType="string" />
        <action
            android:id="@+id/action_artistInfoFragment_to_albumInfoFragment"
            app:destination="@id/albumInfoFragment" />
        <action
            android:id="@+id/action_artistInfoFragment_to_trackInfoFragment"
            app:destination="@id/trackInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumInfoFragment"
        android:name="com.example.digitaldigging.screens.albuminfo.AlbumInfoFragment"
        android:label="fragment_album_info"
        tools:layout="@layout/fragment_album_info" >
        <argument
            android:name="spotifyId"
            app:argType="string" />
        <action
            android:id="@+id/action_albumInfoFragment_to_trackInfoFragment"
            app:destination="@id/trackInfoFragment" />
        <action
            android:id="@+id/action_albumInfoFragment_to_artistInfoFragment"
            app:destination="@id/artistInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/trackInfoFragment"
        android:name="com.example.digitaldigging.screens.trackinfo.TrackInfoFragment"
        android:label="fragment_track_info"
        tools:layout="@layout/fragment_track_info" >
        <argument
            android:name="spotifyId"
            app:argType="string" />
        <action
            android:id="@+id/action_trackInfoFragment_to_albumInfoFragment"
            app:destination="@id/albumInfoFragment" />
        <action
            android:id="@+id/action_trackInfoFragment_to_artistInfoFragment"
            app:destination="@id/artistInfoFragment" />
    </fragment>
</navigation>